<% if (totalPages > 1) { %>
  <nav aria-label="Page navigation example" class="flex justify-center">
    <ul class="inline-flex -space-x-px text-sm">
      <li>
        <a href="?page=0" class="flex items-center justify-center px-3 h-8 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">İl Sayfa</a>
      </li>
      <% for( let i = 0; i < totalPages; i++ ) { %>
         <li>
          <a href="?page=<%=i %>" class="<%= (i == currentPage) ? "active" : "" %> flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"><%=i +1 %></a>
        </li>
      <% } %>

      <li>
        <a href="?page=<%= totalPages - 1 %>" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">Son Sayfa</a>
      </li>
    </ul>
  </nav>
<% } %>
