<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head',{url}) %>
  <body class="font-sans">
    <div class="container mx-auto w-full h-full">
      <!-- Nav -->
      <%- include('../partials/navbar') %>

      <form action="" method="post" class="w-full max-w-2xl mt-10" enctype="multipart/form-data">
        <!-- Başlık Area -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="baslik">
              Başlık
            </label>
          </div>
          <div class="md:w-2/3">
            <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="baslik" type="text" name="baslik">
          </div>
        </div>
        <!-- AltBaslık -->
        <div class="md:flex md:items-start mb-6">
          <div class="md:w-1/3">
            <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="altbaslik">
              altbaslik
            </label>
          </div>
          <div class="md:w-2/3">
           <textarea  name="altbaslik" rows="5" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" ></textarea>
          </div>
        </div>
        <!-- Text Are -->
        <div class="md:flex md:items-start mb-6">
          <div class="md:w-1/3">
            <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="aciklama">
              Açıklama
            </label>
          </div>
          <div class="md:w-2/3">
           <textarea id="editor" name="aciklama" rows="20" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" ></textarea>
          </div>
        </div>
        <!-- Resim Area -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="resim">
              Resim
            </label>
          </div>
          <div class="md:w-2/3">
            <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full p-1 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="baslik" type="file" name="resim">
          </div>
        </div>
        <!-- Kategori Area -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="kategori">
              Kategori
            </label>
          </div>
          <div class="md:w-2/3">
            <select name="kategori" id="kategori">
              <option value="-1" selected>Seçiniz</option>
                 <% categories.forEach(category => { %>
                    <option value="<%=category.dataValues.categoryid%>"><%=category.dataValues.name %></option>
                 <% }) %>
            </select>
          </div>
        </div>
        <!-- Anasayfa and Onay -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="kategori">
              Kategori
            </label>
          </div>
          <div class="md:w-2/3">
            <div class="flex items-center mb-4">
              <input id="anasayfa" name="anasayfa" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
              <label for="default-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Anasayfa</label>
          </div>
          <div class="flex items-center">
              <input id="onay" type="checkbox" name="onay" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
              <label for="checked-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Onay</label>
          </div>
          </div>
        </div> 
        <!-- Kaydet Area -->
        <div class="md:flex md:items-center">
          <div class="md:w-1/3"></div>
          <div class="md:w-2/3">
            <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="sumbit">
              Kaydet
            </button>
          </div>
        </div>
      </form>
    </div>
  </body>
  <!-- CKeditör -->
  <%- include('../partials/ckeditor') %>
</html>